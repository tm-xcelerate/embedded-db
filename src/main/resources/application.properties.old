# EMBEDDED SERVER CONFIGURATION
server.port=8282

# DATASOURCE
spring.datasource.driverClassName=org.apache.derby.jdbc.EmbeddedDriver
spring.datasource.url=jdbc:derby:src/main/resources/webdb
#spring.datasource.username=webdb
